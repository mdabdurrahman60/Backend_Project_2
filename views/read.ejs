<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a class="text-blue-500" href="/">Home</a>
        <h1 class="text-3xl mt-10 tracking-tighter mb-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if (users.length >0){ %>
                <% users.forEach((user)=>{%>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-62 rounded-lg bg-zinc-700 overflow-hidden">
                            <img class="w-full h-full object-cover object-center" src="<%= user.image %>" alt="">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighther"><%= user.name %></h3>
                        <h5 class="text-zinc-500"><%= user.email%></h5>
                        <div class="flex gap-3 mt-10 justify-between">
                            <a class="text-zinc-300" href="/edit/<%= user._id%>">Edit user</a>
                            <a class="text-red-600" href="/delete/<%= user._id %>">Delete user</a>
                        </div>
                    </div>
                <%})%>

            <%}else{%>
                <h3 class="text-zinc-400">No user yet</h3>
            <%}%>
            
            
            
        </div>        
    </div>
</body>
</html>